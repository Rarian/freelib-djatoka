			<!-- Unverified -->
			<id>linux-32</id>
			<activation>
				<os>
					<name>Linux</name>
					<arch>i386</arch>
				</os>
			</activation>
			<properties>
				<env.MAVEN_OPTS>-Djava.library.path=${project.basedir}/lib/Linux-x86-32</env.MAVEN_OPTS>
			</properties>
		</profile>
