<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%level] %d{HH:mm:ss.SSS} [ %C{5} , %M , %L ] %m %n</pattern>
        </encoder>
    </appender>
    
    <appender name="FILEOUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/test-ingest.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>target/logs/test-ingest.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>[%level] %d{HH:mm:ss.SSS} [ %C{5} , %M , %L ] %m %n</pattern>
        </encoder>
    </appender>

    <logger name="info.freelibrary.djatoka.view.IdentifierResolver" level="INFO"/>
    <logger name="info.freelibrary.djatoka.view.ViewServlet" level="INFO"/>

    <logger name="info.freelibrary.util.PairtreeObject" level="INFO"/>
    <logger name="info.freelibrary.util.PairtreeRoot" level="INFO"/>
    
    <logger name="info.freelibrary.djatoka.ingest" level="INFO">
        <appender-ref ref="FILEOUT"/>
    </logger>

    <logger name="ch.qos.logback" level="ERROR"/>

    <logger name="gov.lanl.adore.djatoka.openurl.TileCacheManager" level="INFO"/>
    <!--<logger name="gov.lanl.adore.djatoka.kdu" level="INFO"/>-->

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
