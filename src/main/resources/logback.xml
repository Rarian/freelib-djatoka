<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%level] %d{HH:mm:ss.SSS} [ %C{5} , %M , %L ] %m %n</pattern>
        </encoder>
    </appender>
    
    <appender name="FILEOUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/ingest.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>target/logs/ingest.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>[%level] %d{HH:mm:ss.SSS} [ %C{5} , %M , %L ] %m %n</pattern>
        </encoder>
    </appender>

    <logger name="info.freelibrary.djatoka.view.IdentifierResolver" level="DEBUG"/>
    <logger name="info.freelibrary.djatoka.view.ImageServlet" level="DEBUG"/>
    <logger name="info.freelibrary.djatoka.view.ViewServlet" level="INFO"/>
    <logger name="info.freelibrary.djatoka.TileCache" level="DEBUG"/>
    <logger name="info.freelibrary.djatoka.util.HealthServlet" level="DEBUG"/>

    <logger name="info.freelibrary.util.PairtreeObject" level="INFO"/>
    <logger name="info.freelibrary.util.PairtreeRoot" level="INFO"/>
    <logger name="info.freelibrary.util.FileUtils" level="INFO"/>
    
    <logger name="info.freelibrary.djatoka.ingest" level="INFO">
        <appender-ref ref="FILEOUT"/>
    </logger>

    <logger name="gov.lanl.adore.djatoka.openurl.TileCacheManager" level="INFO"/>
    <logger name="gov.lanl.adore.djatoka.openurl.OpenURLServlet" level="INFO"/>
    <logger name="gov.lanl.adore.djatoka.openurl.OpenURLJP2KService" level="DEBUG"/>
    <logger name="gov.lanl.adore.djatoka.kdu.KduCompressExe" level="INFO"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
