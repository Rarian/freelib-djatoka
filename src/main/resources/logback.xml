<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[ %-5level ] %d{HH:mm:ss.SSS} [ %C{5} , %M , %L ] %m %n</pattern>
        </encoder>
    </appender>

    <logger name="info.freelibrary.djatoka.view.IdentifierResolver" level="INFO"/>
    <logger name="info.freelibrary.djatoka.view.ViewServlet" level="INFO"/>
    <logger name="gov.lanl.adore.djatoka.kdu" level="INFO"/>
    
    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
